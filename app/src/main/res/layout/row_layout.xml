<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:elevation="60dp"
    android:clickable="true"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="75dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/user_pic"
        android:layout_alignParentBottom="true" />

    <TextView
        android:textStyle="bold"
        android:freezesText="true"
        android:textAllCaps="true"
        android:textSize="15dp"
        android:textAlignment="center"
        android:foregroundGravity="center"
        android:fontFamily="serif"
        android:text="first name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/user_pic"
        android:layout_toEndOf="@+id/user_pic"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:id="@+id/first_name" />

    <TextView
        android:textStyle="bold"
        android:freezesText="true"
        android:textAllCaps="true"
        android:textSize="15dp"
        android:textAlignment="center"
        android:foregroundGravity="center"
        android:fontFamily="serif"
        android:text="lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/first_name"
        android:layout_toEndOf="@+id/first_name"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:id="@+id/last_name" />

    <TextView
        android:textStyle="bold"
        android:freezesText="true"
        android:textAllCaps="true"
        android:textSize="12dp"
        android:foregroundGravity="left"
        android:fontFamily="serif"
        android:text="desigantion"
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_name"
        android:layout_alignLeft="@+id/first_name"
        android:layout_alignStart="@+id/first_name"
        android:id="@+id/designation" />

    <TextView
        android:text="lati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/designation"
        android:layout_alignLeft="@+id/designation"
        android:layout_alignStart="@+id/designation"
        android:layout_marginTop="10dp"
        android:id="@+id/lati" />

    <TextView
        android:text="longi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lati"
        android:layout_toRightOf="@+id/first_name"
        android:layout_toEndOf="@+id/first_name"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/longi" />

    <CheckBox

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/designation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/checkBox"
        android:button="@drawable/xml_button"
        android:background="@drawable/check_button"/>


</RelativeLayout>

</android.support.v7.widget.CardView>